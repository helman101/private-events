<div class="container w-50 mt-5 border">
  <h1><%= @user.name %></h1>

  <div class="container">
    <h3>Created events</h3>
    <p>
      <ul>
        <% @created_events.each do |event| %>
          <li><%= link_to event.name, event %></li>
        <% end %>
      </ul>
    </p>
  </div>

  <div class="container">
    <h3>Events to attend</h3>
  <p>
    <div class="container">
      <h4>Upcoming Events</h4>
      <ul>
        <% @upcoming_events.each do |event| %>
          <li><%= link_to event.name, event %></li>
        <% end %>
      </ul> 
    </div>
    <div class="container">
      <h4>Previous Events</h4>
      <ul>
        <% @past_events.each do |event| %>
          <li><%= link_to event.name, event %></li>
        <% end %>
      </ul>
    </div>
    </p>
  </div>
  
</div>
