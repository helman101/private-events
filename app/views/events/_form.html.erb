<%= form_with model: @event do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name, placeholder: 'New Event'%> <br>
  <%= f.label :description %> <br>
  <%= f.text_area :description, placeholder: 'Describe your event...' %> <br>
  <%= f.label :date %> <br>
  <%= f.date_field :date %> <br>
  <%= f.submit 'Create event' %>
<% end %>
