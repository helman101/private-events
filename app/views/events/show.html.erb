<div class="container mt-5">
  <h1><%= @event.name %></h1>
  <div class="container p-3">
    <p><%= @event.description %></p>
    <p><%= @event.date.strftime("Event date: %m/%d/%Y") %></p>
    <span><%= @event.creator.name %></span>
  </div>
  <div class="container mt-5">
    <h3>Attendance</h3>
    <ul>
      <% @event.attendees.each do |attendee| %>
        <li><%= link_to attendee.name, user_path(attendee) %></li>
      <% end %>
    </ul>
  </div>
  <% if current_user.id == @event.creator.id %>
    <div class='container'>
      <h3>Invite someone</h3>
      <%= form_for(:attendance, url: attendances_path) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.hidden_field :id, value: @event.id %>
        <%= f.submit 'Invite', class:'btn btn-info' %>
      <% end %>
    </div>
  <% end %>
</div>