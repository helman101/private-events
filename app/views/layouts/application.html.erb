<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='nav navbar bg-orange'>
      <% if user_signed_in? %>
        <%= link_to current_user.name, user_path(current_user), class:'navbar-brand text-white' %>
      <% else %>
        <%= link_to 'Home', root_path, class:'navbar-brand text-white' %>
      <% end %>   
      <div>
        <%= link_to 'All Events', events_path, class:'btn btn-outline-light' %>
        <% if user_signed_in? %>
          <%= link_to 'New Event', new_event_path, class:'btn btn-success' %>
          <%= link_to 'Sign Out', session_path(session), method: 'Delete', class:'btn btn-danger' %>
        <% else %>
          <%= link_to 'Sign Up', new_user_path, class:'btn btn-outline-light' %>
          <%= link_to 'Sign In', new_session_path, class:'btn btn-outline-light' %>
        <% end %>
      </div>
    </nav>
    <% if flash[:notice] %>
      <div class='alert alert-success text-center'>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class='alert alert-danger text-center'>
        <%= flash[:alert] %>
      </div>
    <% end %>  

    <%= yield %>
  </body>
</html>
